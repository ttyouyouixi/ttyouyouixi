/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: white;
  width: 100%;
  align-items: center;
  /*justify-content: space-between;*/
  padding: 0 0;
  box-sizing: border-box;
}

page {
  height: 100%;
  background: #f8f8f8;
  font-family: -apple-system-font, Arial, Helvetica, sans-serif;
  font-size: 32rpx;
  line-height: 1.42857;
}

/*.container {
  width: 100%;
  min-height: 100%;
  display: flex;
  flex-direction: column;
}*/

.page-session {
  width: 100%;
  white-space: nowrap;
  border-width: 1px 0px 1px 0px;
  border-style: solid;
  border-color: #e6e6e6;
  background: #fff;
}

.page-session-spacing {
  margin-bottom: 30rpx;
  padding-bottom: 30rpx;
}

.page-session-spacing:last-child {
  margin-bottom: 0rpx;
  padding-bottom: 30rpx;
}

/*适用于所有标签类型*/

.tag {
  color: #101010;
  background-color: #ffd500;
  font-size: 22rpx;
  padding: 2px 5px;
  border-radius: 5px;
}

/*全局价格样式*/

.text-price {
  color: #e51c23;
  font-size: 22rpx;
  margin-left: 20rpx;
}

/*文本样式*/

.text-title {
  font-size: 30rpx;
}

.text-subtitle {
  font-size: 26rpx;
  color: #c0c0c0;
}

.text-content {
  color: #999;
  font-size: 28rpx;
}

.swiper {
  height: 30vh;
  width: 100%;
}

/*图片样式,占满父布局*/

.swiper image {
  height: 100%;
  width: 100%;
}

.round-img {
  height: 100rpx;
  width: 100rpx;
  border-radius: 100px;
}

.info-title {
  color: #949494;
  font-size: 28rpx;
}

.info-content {
  font-size: 30rpx;
}

.icon-left {
  vertical-align: sub;
  margin-right: 15rpx;
  
}
.padding-10{
  padding: 10px;
}
.margin-10{
  margin: 10px;
}
@import 'components/wux.wxss';
@import 'assets/styles/weui.wxss';
@import 'assets/styles/skyvow.wxss';
