.item-wrapper {
  /*弹性布局*/
  display: block;
  padding: 10rpx;
  width: 100%;
}

.item-wrapper .item-logo {
  width: 200rpx;
  height: 200rpx;
}

.item-wrapper .item-txt {
  /*占满剩余的布局*/
}

.item-wrapper .item-txt .item-line {
  display: block;
}

.item-wrapper .item-txt .item-line .item-title {
}

.item-wrapper .item-txt .item-line .item-right {
  float: right;
}

.item {
  /*弹性布局*/
  display: flex;
  padding: 20rpx;
  /*border-bottom: 0.5rpx solid #e6e6e6;*/
  cursor: pointer;
}

.item .poster {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
  border-radius: 8rpx;
}

.item .meta {
  flex: 1;
}

.item .meta .title, .item .meta .sub-title {
  display: block;
  margin-bottom: 30rpx;
}

.item .meta .title {
  font-size: 32rpx;
}

.item .right{
  text-align:right;
}
.item .right .rating {
  font-size: 28rpx;
  font-weight: bold;
  color: #f74c31;
  display: block;
  margin-bottom: 30rpx;
}

.item  .right .sub-distance {
  display: block;
  margin-bottom: 35rpx;
}
/*msg*/
.outer, .inner{
  display: flex;
  border-bottom: solid 1px #dedede;
  padding: 10rpx;
}
.outer .right{
  flex: 1;
  padding: 10rpx;
 
}

.outer .left{
  padding: 10rpx;
  text-align: center;
  
}
p {
  margin: 0;
}

.item .left-text{
  flex: 1;
}

.item .right-img{
  height: 200rpx;
  width: 200rpx;
  border-radius: 8rpx

}
