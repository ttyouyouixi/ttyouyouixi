/* pages/location/event-grid/event-grid.wxss */

.event-wrapper {
  width: 200rpx;
  display: inline-block;
  padding: 10rpx
}

.event-wrapper:first-child {
  margin-left: 0rpx;
}

.event-wrapper:last-child {
  margin-right: 0rpx;
}

.event-content .event-poster {
  width: 200rpx;
  height: 200rpx;
}

.event-content  .event-summary {
  display: flex;
  flex-direction: column;
  align-items: flex-center;
  text-align: center;
}

.event-content  .event-title {
  display: inline-block;
  /*color: #9e9e9e;*/
  font-size: 22rpx;
  /*height: 60rpx;*/
  /*font-weight: 600;*/
  word-break: break-all;
  white-space: pre-line;
  text-overflow: ellipsis;
  overflow: hidden;
  line-height: 30rpx;
  width: 200rpx;
}

.event-content .event-time {
  width: 200rpx;
  color: #9e9e9e;
  font-size: 24rpx;
}


