      <image class="event-poster" src="{{item.image}}" mode="aspectFill"></image>
      <view class="event-summary">
        <view style="width:180rpx">
          {{item.weight}}<a style="float:right">
          {{item.group}}
        </a>
        </view>
        <view>
          <text class="tag">{{item.state}}</text>
        </view>
        <button class="weui-btn mini-btn" type="primary" size="mini" catchtap="contact_B">联系物主</button>
      </view>
