
<!-- 封装的控件,横向滚动的推荐item,搭配wxss使用 -->
<!-- 首页的横向item -->
<template name="view-h-item-main">
  <view class="event-wrapper" bindtap="itemClick" data-proid="{{item.id}}" hover-class="weui-cell_active">
    <view class="event-content">
      <image class="event-poster" src="{{event.image}}" mode="aspectFill"></image>
      <view class="event-summary">
        <text class="event-title">{{event.weight}} | {{event.Deadline}}</text>
        <view>
          <text class="tag">{{event.group}}</text>
          <text class="text-price">{{event.price}}</text>
        </view>
      </view>
    </view>
  </view>
</template>
<!-- 我的-单个订单-B -->
<template name="view-h-item-order_B">
