<import src="../../components/xnumber/xnumber.wxml" />
<!-- create.wxml -->
<view class="page">

  <view class="weui-cells__title"></view>
  <!-- 描述及图片 -->
  <view class="weui-cells">
    <view class="weui-cell">
      <view class="weui-cell__bd">
        <view class="weui-uploader">
          <view class="weui-uploader__hd">
            <!--<view class="weui-uploader__title">
            图片上传</view>
            <view class="weui-uploader__info">{{files.length}}/2</view>
            -->
            <view class="section">
              <textarea bindblur="getInfoText" auto-height placeholder="介绍一下您要带的物品" style="min-height: 150rpx;" />
            </view>
          </view>
          <view class="weui-uploader__bd">
            <view class="weui-uploader__files" id="uploaderFiles">
              <block wx:for="{{files}}" wx:key="*this">
                <view class="weui-uploader__file" bindtap="previewImage" id="{{item}}">
                  <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                </view>
              </block>
            </view>
            <view class="weui-uploader__input-box">
              <view class="weui-uploader__input" bindtap="chooseImage"></view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <!-- 收货信息 -->
  <view class="weui-cells__title">物流信息</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__bd">重量(kg)</view>
      <view class="weui-cell__ft">
        <template is="xnumber" data="{{...$wux.xnumber.config}}" />
      </view>
    </view>
    <navigator url="../search/search?type=2" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
      <view class="weui-cell__bd">发货地</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">{{startCity}}</view>
    </navigator>
    <navigator url="../search/search?type=2" class="weui-cell" hover-class="weui-cell_active">
      <view class="weui-cell__bd">目的地</view>
      <view class="weui-cell__ft weui-cell__ft_in-access">{{endCity}}</view>
    </navigator>
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">日期</view>
      </view>
      <view class="weui-cell__bd">
        <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
          <view class="weui-input">{{date}}</view>
        </picker>
      </view>
    </view>
  </view>

  <!-- //选择品类 -->
  <view class="weui-cells__title">选择品类</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-grids">
      <block wx:for="{{groupList}}" wx:key="*this">
        <view class="weui-grid {{item.check?'weui-grid_active':''}}" bindtap="clickGroup" id="{{index}}">
          <image class="weui-grid__icon" src="../../image/index_in.png" />
          <view class="weui-grid__label">{{item.name}}</view>
        </view>
      </block>
    </view>
  </view>

  <!-- 特别属性 -->
  <view class="weui-cells__title">特别注意</view>
  <view class="weui-cells weui-cells_after-title">
    <checkbox-group bindchange="checkboxChange" id="extra">
      <label class="weui-cell weui-check__label" wx:for="{{extraList}}" wx:key="value">
        <checkbox class="weui-check" value="{{item.value}}" checked="{{item.checked}}" />
        <view class="weui-cell__hd weui-check__hd_in-checkbox">
          <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"></icon>
          <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.checked}}"></icon>
        </view>
        <view class="weui-cell__bd">{{item.name}}</view>
      </label>
    </checkbox-group>
  </view>
  <!-- 价格 -->
  <view class="weui-cells__title">我的预估</view>
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">包裹价值</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" type="digit" placeholder="请输入预估价值" />
      </view>
      <view class="weui-cell__ft">¥</view>
    </view>
    <!-- 邮费预算 -->
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">邮费预算</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" type="digit" placeholder="请输入邮费预算" />
      </view>
      <view class="weui-cell__ft">¥</view>
    </view>
  </view>
  <!-- 附加 -->
  <view class="weui-cells__title">可选服务</view>
  <view class="weui-cells weui-cells_after-title">
    <checkbox-group bindchange="checkboxChange" id="serve">
      <label class="weui-cell weui-check__label" wx:for="{{serveList}}" wx:key="value">
        <checkbox class="weui-check" value="{{item.value}}" checked="{{item.checked}}" />
        <view class="weui-cell__hd weui-check__hd_in-checkbox">
          <icon class="weui-icon-checkbox_circle" type="circle" size="23" wx:if="{{!item.checked}}"></icon>
          <icon class="weui-icon-checkbox_success" type="success" size="23" wx:if="{{item.checked}}"></icon>
        </view>
        <view class="weui-cell__bd">{{item.name}}</view>
      </label>
    </checkbox-group>
  </view>
  <!-- 结算 -->
  <view class="weui-cells__title">结算</view>
  <view class="weui-cells weui-cells_after-title">
    <!-- 定价 -->
    <view class="weui-cell weui-cell_input">
      <view class="weui-cell__hd">
        <view class="weui-label">订单价格</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" type="digit" placeholder="您愿支付多少钱" />
      </view>
      <view class="weui-cell__ft">¥</view>
    </view>
  </view>
  <view class="weui-cells__tips">根据成交数据,您的订单在 100¥ 更容易被抢单</view>
  <checkbox-group bindchange="bindAgreeChange">
    <label class="weui-agree" for="weuiAgree">
      <view class="weui-agree__text">
        <checkbox class="weui-agree__checkbox" id="weuiAgree" value="agree" checked="{{isAgree}}" />
        <view class="weui-agree__checkbox-icon">
          <icon class="weui-agree__checkbox-icon-check" type="success_no_circle" size="9" wx:if="{{isAgree}}"></icon>
        </view>
        我已阅读并同意平台服务条款
      </view>
    </label>
  </checkbox-group>
  <view class="weui-btn-area">
    <button class="weui-btn" type="primary" bindtap="cReleaseOrder">确认修改</button>
  </view>
</view>