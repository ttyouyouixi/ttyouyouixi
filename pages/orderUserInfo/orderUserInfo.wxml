<import src="../../components/rater/rater.wxml"  />
<view class="page">
  <swiper class="swiper" indicator-dots="true" autoplay="true" interval="3000">
    <block wx:for="{{banners}}" wx:key="id">
      <swiper-item>
        <image src="{{item.url}}" class="slide-image" mode="aspectFill" bindtap="itemClick" id="{{index}}"  />
      </swiper-item>
    </block>
  </swiper>
  <!-- 基本信息 -->
  <view class="weui-cells weui-cells_after-title">
    <view class="weui-cell">
      <view class="weui-cell__hd">
        <image src="{{userInfo.avatarUrl}}" class="round-img"></image>
      </view>
      <view class="weui-cell__msg  weui-cell__bd  info-content">
        <view class="name">{{userInfo.nickName}}</view>
        <view class="level">
          <icon type="success" size="15" class="icon-left"  />
          高级经理</view>
        </view>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">综合评分</view>
        <view class="weui-cell__ft">
          <template is="rater" data="{{ ...$wux.rater.star }}"  />
        </view>
      </view>
    </view>
    <!-- 评论列表 -->
    <view class="weui-panel weui-panel_access">
      <view class="weui-panel__hd">收到的评价{{commentList&&commentList.length?('（'+commentList.length+'）'):''}}</view>
      <view class="weui-panel__bd">
        <block wx:for="{{commentList}}" wx:key="*this">
          <view class="weui-media-box weui-media-box_appmsg">
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
              <image class="weui-media-box__thumb round-img" src="{{item.avatar}}"  />
            </view>
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <view class="weui-media-box__title">{{item.nickName}}</view>
              <view class="weui-media-box__desc">{{item.desc}}</view>
            </view>
          </view>
        </block>
      </view>
    </view>
  </view>