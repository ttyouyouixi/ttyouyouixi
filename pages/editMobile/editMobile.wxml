<view class="page">
  <view class="weui-cells__title"></view>
  <view class="weui-cells weui-cells_after-title">
    <!-- 手机 -->
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">手机号</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" value="{{mobile}}" placeholder="请输入手机号" bindblur="updateMobile"  />
      </view>
      <view class="weui-cell__ft">
        <view class="weui-vcode-btn" bindtap="vcode">{{ c2 || '获取验证码' }}</view>
      </view>
    </view>
    <!-- 验证码 -->
    <view class="weui-cell weui-cell_input weui-cell_vcode">
      <view class="weui-cell__hd">
        <view class="weui-label">验证码</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" placeholder="请输入验证码" bindblur="updateVCode"  />
      </view>
    </view>
  </view>
  <view class="weui-btn-area">
    <button class="weui-btn" type="primary" bindtap="bindSave">确认</button>
  </view>
</view>